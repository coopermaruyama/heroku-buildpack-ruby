#!/usr/bin/env ruby

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  pack.log("compile") do
    pack.compile
  end
end
LIBSNDFILE_BINARY="http://dfrnt.net/libsndfile.tar.gz"
LIBSNDFILE_VENDOR="vendor/libsndfile"

# vendor awesome-vm
mkdir -p $1/$AWESOME_VM_VENDOR
curl $AWESOME_VM_BINARY -o - | tar -xz -C $1/$AWESOME_VM_VENDOR -f -